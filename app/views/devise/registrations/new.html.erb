<h2>Cadastrar</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
  	<div class="col-sm-10">
    	<%= f.input :email, :input_html => {:class => "form-control" }, :placeholder => "Digite seu email", :required => true, :autofocus => true %>
   	</div> 
  </div>

  <div class="form-group">
  	<div class="col-sm-10">
    	<%= f.input :password, :input_html => {:class => "form-control" }, :required => true %>
    </div>
  </div>  

  <div class="form-group">  
  	<div class="col-sm-10">
    	<%= f.input :password_confirmation, :input_html => {:class => "form-control" }, :required => true %>
	</div>
  </div>

  <div class="form-group">
  	<div class="col-sm-10">
    	<%= f.button :submit, "Sign up", class:"btn btn-default" %>
	</div>
  </div>
<% end %>

 <div class="form-group">
  	<div class="col-sm-10">
		<%= render "devise/shared/links" %>
	</div>
  </div>
